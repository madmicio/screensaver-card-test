{
    "name": "screensaver-card",
    "version": "1.0.0",
    "description": "A screensavercard for Home Assistant",
    "type": "module",
    "main": "src/screensaver-card.js",
    "scripts": {
        "start": "rollup -c rollup.config.js --watch",
        "build": "npm run rollup && npm run add-version",
        "add-version": "cross-var replace-in-file \"@SCREENSAVER_CARD_VERSION_PLACEHOLDER@\" \"$npm_package_version\" \"dist/screensaver-card.js\"",
        "rollup": "rollup -c"
    },
    "keywords": [
        "home-assistant",
        "custom-card"
    ],
    "author": "Maurizio Arci",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^28.0.2",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.2",
        "babel-preset-env": "^1.7.0",
        "cross-var": "^1.1.0",
        "rollup": "^3.29.5",
        "rollup-plugin-serve": "^1.1.1",
        "tslib": "^2.8.1",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "core-js": "^3.39.0",
        "custom-card-helpers": "^1.9.0",
        "lit": "^2.8.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/madmicio/screensaver-card-test.git"
    },
    "bugs": {
        "url": "https://github.com/madmicio/screensaver-card-test/issues"
    },
    "homepage": "https://github.com/madmicio/screensaver-card-test#readme"
}
